<%- include('../partials/header') %>
    <main id="admin" class="container">
        <div class="title__container">
            <section>
                <form action="search" class="search__bar">
                    <img src="/img/icons/search_icon.svg" alt="search_icon">
                    <input type="search" name="product_list" placeholder="código, nombre o categoría" size="50">
                </form>
            </section>
            <section class="list__title">
                <article class="title__product__list">
                    <h2>LISTADO DE PRODUCTOS</h2>
                </article>
                <article class="add__product__list">
                    <h4>AGREGAR</h4>
                    <button class="btn" id="add">
                        <img src="/img/icons/add_icon.svg" alt="add">
                    </button>
                </article>
            </section>
        </div>
        <div class="main__container">
            <section class="product__atributes">
                <ul>
                    <li>ID</li>
                    <li>Código</li>
                    <li>Nombre del producto</li>  
                    <li>Categoría</li>
                </ul>
            </section>
            <section>
                <% productos.forEach( producto => {  %>
                <article class="product__content">
                    <ul>
                        <li><%= producto.product_id %></li>
                        <li><%= producto.product_sku %></li>
                        <li><%= producto.product_name %></li>
                        <li><%= producto.licence_name %></li>
                        <li>
                            <button>
                                <img src="/img/icons/edit_pencil.svg" alt="edit">
                            </button>
                        </li>
                        <li>
                            <button>
                                <img src="/img/icons/delete_trash.svg" alt="delete">
                            </button>
                        </li>
                    </ul>
                </article>
                <% }); %>
            </section>
        </div>
    </main>
    <%- include('../partials/footer') %>

