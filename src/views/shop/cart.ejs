<%- include('../partials/header') %>
        <main id="cart" class="container">
            <section class="cart__header">
                <h2 class="cart__title">CARRITO DE COMPRAS</h2>
            </section>

            <section>
                <ul class="cart__table">
                    <li class="cart__table__header">
                        <p class="table__column column__product">DETALLE DE PRODUCTO</p>
                        <p class="table__column column__quantity">CANTIDAD</p>
                        <p class="table__column column__total">TOTAL</p>
                        <p class="table__column column__remove"></p>
                    </li>
                    <% productos.items.forEach( producto => {  %> 
                        <li class="cart__table__row">
                            <div class="table__column column__product">
                                <article class="cart__item">
                                    <a class="cart__item__link" href="">
                                        <picture class="cart__item__picture">
                                            <img src=<%= producto.img_front%> alt="Figura coleccionable de Baby Yoda">
                                        </picture>
                                    </a>

                                    <div class="cart__item__detail">
                                        <div class="cart__item__titles">
                                            <h2 class="cart__item__name"><%= producto.product_name.toUpperCase()%></h2>
                                            <p class="cart__item__license"><%= producto.licence_name%></p>
                                        </div>
                                        <p class="cart__item__price"><%= producto.product_price%></p>
                                    </div>
                                </article>
                            </div>

                            <div class="table__column column__quantity">
                                <div class="cart__item__quantity">
                                    <input type="number" class="item__quantity__input" id="cart-item1__qty" value="<%= producto.cant%>" >
                                    <div class="item__quantity__buttons">
                                        <button class="item__quantity__button btn" id="increment_1">
                                            <img src="../../img/icons/+.svg" alt="Símbolo de suma">
                                        </button>
                                        <button class="item__quantity__button btn" id="decrement_1">
                                            <img src="../../img/icons/-.svg" alt="Símbolo de resta">
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="table__column column__total">
                                <p class="table__row__price" id="cart-item1__qty-price"><%=producto.product_total%></p>
                            </div>

                            <div class="table__column column__remove">
                                <button class="item__remove__button btn" id="remove1">
                                    <img src="../../img/icons/gg_close-o.svg" alt="Ícono de borrado">
                                </button>
                            </div>    
                        </li>
                    <% }); %>  
                </ul>
            </section>

            <section class="cart__summary">
                <h2 class="cart__title summary__title">RESUMEN</h2>

                <ul class="summary__table">
                    <li class="summary__table__row">
                        <p class="summary__text__left">Cantidad de Elementos</p>
                        <p class="summary__text__right" id="summary__qty"><%=productos.cant_total%></p>
                    </li>
                    <li class="summary__table__row">
                        <p class="summary__text__left">Subtotal</p>
                        <p class="summary__text__right" id="summary__subtotal">$<%=productos.subtotal%></p>
                    </li>
                    <li class="summary__table__row">
                        <p class="summary__text__left">Envío</p>
                        <p class="summary__text__right">$ <%=productos.envio%></p>
                    </li>
                    <li class="summary__table__row">
                        <p class="summary__text__left">Total</p>
                        <p class="summary__text__right" id="summary__total">$<%=productos.total%></p>
                    </li> 
                </ul>

                <input class="btn btn--primary btn--large" type="submit" value="IR A PAGAR">
            </section>
        </main>
        <%- include('../partials/footer') %>