<%- include('../partials/header') %>
    <main class="container shop-container"> 
        <aside class="aside_shop">
            
                <p  class="aside_title">BUSCAR</p>
                    <input class=" filter" type="text" placeholder="item o categoria">
                <p class="aside_title">ORDENAR POR</p>
                    <select class="aside_order filter" name="" id=""  >
                        <option value="" disabled selected>Mayor a menor</option>
                    </select>
                <p class="aside_title">PRECIO</p>
                <div class="aside_precio">
                    <p>MIN</p>
                        <input type="text" class="filter" placeholder="0"> 
                        <p>-</p>
                    <p>MAX</p>
                        <input type="text" class="filter" placeholder="0">       
                </div>
                <p class="aside_title">FILTRAR</p>
                    <div class="aside_filter">
                        <input class="filter" type="checkbox">
                        <p>NUEVOS</p>
                    </div>
                    <div class="aside_filter">    
                        <input class="filter" type="checkbox">
                        <p>OFERTAS</p>
                    </div> 
                    <div class="aside_filter">    
                        <input class="filter" type="checkbox">
                        <p>EDICIÓN ESPECIAL</p>
                    </div>    
                    <div class="aside_filter">     
                        <input class="filter" type="checkbox">
                        <p>FAVORITOS</p>
                    </div>
    
        </aside>
        <section class="container">
            <ul class="shop-collection__items  slider__items">
                <% products.forEach( product => {  %>
                <li class="slider__item">
                    <article class="shop-collection___content card-item">
                        <a class="card-item__link" href="/shop/item/<%= product.product_id%>" id="<%= product.product_id %>">
                            <picture class="card-item__cover">
                                <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--back" src=<%= product.image_back %> alt=<%= product.product_description + ' en caja' %>>
                                <img class="card-item__img--front" src=<%= product.image_front %> alt=<%= product.product_description %>>
                            </picture>
                            <div class="card-item__content">
                                <p class="card-item__licence"> <%= product.licence_name %> </p>
                                <h4 class="card-item__name"><%= product.product_name.toUpperCase() %></h4>
                                <p class="card-items__price"><%= product.price %></p>
                                <p class="card-item__promo"><%= product.dues + ' CUOTAS SIN INTERÉS' %></p>
                            </div>
                        </a>
                    </article>
                </li>
                <% }); %>
            </ul>
            <div class="pagination">
                <a class="pagination__link after" href="#" ><</a>
                <a class="pagination__link pagination__link--selected" href="#" >1</a>
                <a class="pagination__link" href="#" >2</a>
                <a class="pagination__link" href="#" >3</a>
                <a class="pagination__link" href="#" >4</a>
                <a class="pagination__link" href="#" >5</a>
                <a class="pagination__link next" href="#" >></a>
            </div>
        </section>
    </main>
<%- include('../partials/footer') %>
